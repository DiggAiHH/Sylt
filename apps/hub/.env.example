# BLUM Sylt Hotels - Environment Variables
# Copy this file to .env.local and fill in your values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/sylt_hotels

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# External Booking Sync
BOOKING_COM_API_KEY=your_booking_com_api_key
BOOKING_COM_HOTEL_ID=your_hotel_id

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@blumsylthotels.de
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=BLUM Sylt Hotels <noreply@blumsylthotels.de>

# Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://blumsylthotels.de
NEXT_PUBLIC_API_URL=https://api.blumsylthotels.de

# Security
JWT_SECRET=your_jwt_secret_key_at_least_32_chars
ENCRYPTION_KEY=your_32_char_encryption_key_here
