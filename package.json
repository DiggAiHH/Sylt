{
  "name": "blum-sylt-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Hub & Spoke Architecture fÃ¼r BLUM Sylt Premium Hospitality",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "dev:hub": "npm run dev -w apps/hub",
    "dev:satellite": "npm run dev -w apps/satellite",
    "build:hub": "npm run build -w apps/hub",
    "build:satellite": "npm run build -w apps/satellite",
    "build:all": "npm run build -w apps/hub && npm run build -w apps/satellite",
    "lint:all": "npm run lint -w apps/hub && npm run lint -w apps/satellite",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "next": "14.2.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
